## cd to a dir and list all files 
function cs {
    builtin cd "$@" && ls -F
}

## aliases directories
alias ..='cd ..'
alias ls='ls -CF'
alias la='ls -la'
alias lr='ls -Rh' ## list recursively

## python
alias python=python3
alias pip=pip3

## aliases others
alias top='htop'

## other alias
