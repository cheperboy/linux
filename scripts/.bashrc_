## cd to a dir and list all files 
function cs {
    builtin cd "$@" && ls -F
}

## aliases directories
alias ..='cd ..'

alias l='ls -lA'
alias ll='ls -CFA'
alias la='ls -CFA'
alias lr='ls -lAR' ## list recursively

## python
alias python=python3
alias pip=pip3

## aliases others
alias top='htop'

## other alias
alias dev='cd /home/pi/Dev/'
alias prod='cd /home/pi/Prod/'

